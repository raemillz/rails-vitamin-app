<header class="masthead text-center text-white">
  <p id="notice"><%= notice %></p>

  <% if @message %>
    <div class="center alert">
      <p><%= @message %></p>
    </div>
  <% end %>
  <div class="masthead-content">
    <div class="container">
      <% if @vitamin_pack.name %>
      <h1 class="masthead-heading mb-0"><%= @vitamin_pack.name %> Pack</h1>
      <h2><%= link_to "Edit Pack", edit_vitamin_pack_path %></h2>
      <% else %>
      <h1 class="masthead-heading mb-0">Create a New Vitamin Pack</h1>
      <% end %>
    </div>
  </div>

</header>

</br>
