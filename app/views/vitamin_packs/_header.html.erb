<header class="masthead text-center text-white">
  <p id="notice"><%= notice %></p>

  <% if @message %>
    <div class="center alert">
      <p><%= @message %></p>
    </div>
  <% end %>
  <div class="masthead-content">
    <div class="container">
      <% if @vitamin_packs %>
      <h1 class="masthead-heading mb-0"><%= @user.name %>'s Vitamin Packs</h2>
      <% elsif @vitamin_pack.id %>
      <h1 class="masthead-heading mb-0"><%= @vitamin_pack.name %> Pack</h1>
      <h2><%= link_to "Edit Pack", edit_user_vitamin_pack_path(@user, @vitamin_pack) %></h2>
        <%if @next_pack%>
          <a href="/users/<%=@user.id%>/vitamin_packs/<%=@next_pack.id%>" id="nextPack" class='btn btn-primary btn-mini'> Next Vitamin Pack</a>
        <%end%>
      <% else %>
      <h1 class="masthead-heading mb-0">Create a New Vitamin Pack</h1>
      <% end %>
    </div>
  </div>

</header>

</br>
