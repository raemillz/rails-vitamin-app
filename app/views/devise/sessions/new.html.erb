<header class="masthead text-center text-white">
  <div class="masthead-content">
    <div class="container">
      <h1 class="masthead-heading mb-0">Vitamin Tracking App</h1>
      <h2 class="masthead-subheading mb-0">So You Don't Miss a Thing</h2>
    </div>
    <p id="notice"><%= notice %></p>
  </div>
  <div class="bg-circle-1 bg-circle"></div>
  <div class="bg-circle-2 bg-circle"></div>
  <div class="bg-circle-3 bg-circle"></div>
  <div class="bg-circle-4 bg-circle"></div>
</header>

<section>
  <div class="container">
      <%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>
        <div class="form-group text-center">
          <strong>
            <%= f.label :name, "Enter your name" %><br>
            <%= f.text_field :name, class: "form-control" %>
          </strong>
        </div>

        <div class="form-group text-center">
          <strong>
            <%= f.label :password, "Enter your password" %><br>
            <%= f.password_field :password, class: "form-control" %>
          </strong>
        </div>

        <div class="form-group text-center">
          <strong>
            <%= link_to('Log in with Facebook!', user_facebook_omniauth_authorize_path) %>
          </strong>
          <br>
        </div>

        <div class="actions text-center">
          <%= f.submit "Sign In", class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
</section>
