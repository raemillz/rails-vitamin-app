<%= form_for(@vitamin) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %></div>

  <div class="form-group">
    <%= f.label :benefit, "Benefit" %><br>
    <%= f.text_field :benefit, class: "form-control" %></div>

  <div class="form-group">
    <%= f.label :capsule_amount, "How many capsules per serving?" %><br>
    <%= f.number_field :capsule_amount, class: "form-control" %></div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
