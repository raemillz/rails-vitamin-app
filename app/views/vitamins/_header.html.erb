<header class="masthead text-center text-white">
  <p id="notice"><%= notice %></p>

  <% if @message %>
    <div class="center alert">
      <p><%= @message %></p>
    </div>
  <% end %>
  <div class="masthead-content">
    <div class="container">
      <% if @vitamins %>
        <h1 class="masthead-heading mb-0">Vitamin Index</h1>
      <% elsif @vitamin.name %>
        <h1 class="masthead-heading mb-0">Vitamin <%= @vitamin.name %></h1>
      <% else %>
        <h1 class="masthead-heading mb-0">Create a New Vitamin</h1>
      <% end %>
    </div>
  </div>

</header>

</br>
