<%= render 'header' %>

<section>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th colspan="1" class="text-center"><h3>All Currently Listed Benefits</h3></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td class="text-center"><strong>Benefit</strong></td>
        </tr>
        <% @benefits.order_alphabetically.each do |benefit| %>
          <tr>
            <td class="text-center"><%= link_to benefit.name, benefit_path(benefit) %></td>
        <% end %>
      </tr>
      </tbody>
    </table>

    <br>

  </div>
</section>
 <%= render 'layouts/footer' %>
