<header class="masthead text-center text-white">
  <div class="masthead-content">
    <div class="container">
      <h1 class="masthead-heading mb-0">Vitamin Tracking App</h1>
      <h2 class="masthead-subheading mb-0">So You Don't Miss a Thing</h2>
      <a class="btn btn-primary btn-xl rounded-pill mt-5">
      <% if session[:user_id] %>
        <h1><%= @user.name %></h1>
        <h2>Email: <%= @user.email %></h2>
        <h2>Facebook UID: <%= @user.uid %></h2>
        <img src="<%= @user.image %>">
      <% else %>
        <%= link_to('Log in with Facebook!', '/auth/facebook') %>
      <% end %>
    </a>
    </div>
    <p id="notice"><%= notice %></p>
  </div>
  <div class="bg-circle-1 bg-circle"></div>
  <div class="bg-circle-2 bg-circle"></div>
  <div class="bg-circle-3 bg-circle"></div>
  <div class="bg-circle-4 bg-circle"></div>
</header>

<section>
  <div class="container">
      <%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>
        <div class="form-group text-center">
          <strong>
            <%= f.label :name, "Enter your name" %><br>
            <%= f.text_field :name, class: "form-control" %>
          </strong>
        </div>

        <div class="form-group text-center">
          <strong>
            <%= f.label :password, "Enter your password" %><br>
            <%= f.password_field :password, class: "form-control" %>
          </strong>
        </div>

        <div class="actions text-center">
          <%= f.submit "Sign In", class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
</section>
