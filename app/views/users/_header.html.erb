<header class="masthead text-center text-white">
  <p id="notice"><%= notice %></p>

  <% if @message %>
    <div class="center alert">
      <p><%= @message %></p>
    </div>
  <% end %>
  <div class="masthead-content">
    <div class="container">
      <% if @user.name %>
      <h1 class="masthead-heading mb-0"><%= @user.name %>'s Profile</h1>
      <% else %>
      <h1 class="masthead-heading mb-0">Create a Profile</h1>
      <% end %>
    </div>
  </div>

</header>

</br>
